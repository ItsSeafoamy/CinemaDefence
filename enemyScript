public class enemyScript : MonoBehaviour 
{
	public int health = 5;
	public float movementSpeed = 10;
	// Use this for initialization
	void Start () 
	{
	
	}
	
	// Update is called once per frame
	void Update () 
	{
		transform.Translate(Vector3.right * movementSpeed * Time.deltaTime);
		if(health < 1)
		{
			Destroy (gameObject)
		}
	}

	void OnControllerColliderHit(ControllerColliderHit hit)
	{
		if (hit.gameObject.name == "popcorn") //we're firing prefabs at the enemies
		{
			dataScript popDamage = GetComponent<dataScript> (); //don't know what  the persistant data scripts called:L
			health -= popDamage;//or the damage popcorn causes (except obesity obviously)
		}
	}

}
